@import 'nib'

global-reset()

$c-text = #8F8F8F
$c-link = #A97C50
$c-text-dark = #515151

html,
body
  widht 100%
  height 100%
  margin 0
  min-height 600px
  min-width 940px
  background #eeebdf
  font-family Avenir, 'Avenir Next', Helvetica, Arial, sans-serif
  color $c-link
  font-size 14px

a
  color $c-link

.header
  height 150px
  text-align center
  position relative

  .facebook
    position absolute
    top 0
    left 0
    margin 16px

  .headnote
    position absolute
    top 0
    right 0
    font-size 11px
    margin 16px

  .logo
    padding 27px 0 0

.message-wrapper
  display table
  height 100%
  width 100%
  padding 150px 0 200px
  margin -150px 0 -350px
  box-sizing border-box

.message
  display table-cell
  vertical-align middle
  text-align center
  font-size 0

.message-body
  width 90%
  margin 0 auto

  img
    width auto

  span
    display inline-block
    padding 0 10px

    i
      display inline-block
      overflow hidden

      img
        height auto

.footer
  height 350px
  text-align center
  overflow hidden
  position relative

  .footer-inner
    position absolute
    top 10px + 150px
    left 0
    width 300%
    height @height - 10px

  .footer-block
    width 33.3%
    height @height - 10px
    float left


  .from-to
    font-size 16px
    height @font-size
    // padding-top 10px
    color $c-link

    span
      padding 0 17px
    i
      padding-right 3px
    strong
      font-weight bold

  .try-out
    a
      display inline-block
      margin 61px 0 0
      text-decoration none
      color $c-text
      border 1px solid $c-text
      padding 12px 44px 10px
      border-radius 19px

      &:hover,
      &:active,
      &:focus
        color $c-link
        border-color $c-link

  .actions
    text-align center
    margin 64px 0 0

  // >>
  .action-wrapper
    display inline-block
    position relative

  // >>
  .action
    display inline-block
    text-decoration none
    color $c-text
    margin 0 40px
    cursor pointer

    &.active,
    &:hover
      color $c-link

    .icon
      //

    .text
      display inline-block
      padding 7px 0 0
      text-decoration none
      font-size 12px

  .navigation
    width 940px
    margin 0 auto

    .action-wrapper,
    .action,
    .action-content
      display inline-block
      vertical-align top

    .action
      position relative
      margin 0 40px
      padding-top 63px
      z-index 2

    .action-content
      position relative
      display inline-block
      width 460px
      margin 0 -37px 0 -57px
      padding-left 20px
      text-align left
      z-index 1
      overflow hidden
      height 174px

      .action-content-inner
        position absolute
        top 0
        left 0
        width 500%

      .content-wrapper
        width 20%
        height 174px
        float left

        &.active
          .caption
            opacity 1

        .caption
          opacity 0

      .caption
        display inline-block
        width 200px
        height 160px
        background #ccc
        float left
        margin 0 -7px 0 -7px
        background-image url('../img/zahar-sprite.jpg')
        background-size 200px 1000px
        background-position 0 -27px

        &.caption-type1
          background-position 0 -27px
        &.caption-type2
          background-position 0 -227px
        &.caption-type3
          background-position 0 -427px
        &.caption-type4
          background-position 0 -627px
        &.caption-type5
          background-position 0 -827px

      .content
        display inline-block
        width 267px
        float left
        color $c-text
        font-size 12px

        .title
          font-size 17px
          color $c-link
          padding 50px 0 0

        .text
          padding 10px 0 0
          line-height 1.3

.action-box
  position absolute
  bottom 78px
  left 50%
  right 0
  border 1px solid $c-text
  width 172px
  margin-left -86px
  border-radius 4px
  background rgba(#EEEBDE, 0.8)

  .arrow
    position absolute
    bottom -8px
    left 50%
    height 8px
    width 16px
    margin-left -8px
    overflow hidden

    &:after
      content ''
      position absolute
      bottom 2px
      left 1px
      width 12px
      height 12px
      border 1px solid $c-text
      border-radius 3px
      transform: rotate(45deg)
      background #edeade

  .alert
    padding 10px

  textarea
    display block
    box-sizing border-box
    margin 9px
    width @width - (@margin * 2)
    height 94px
    padding 5px 8px
    font-size 11.5px
    line-height 1.45
    color $c-text-dark
    border 1px solid $c-text
    border-radius 4px
    background none
    resize none

    &:focus
      outline none
      border-color $c-link

  input
    display block
    box-sizing border-box
    margin 9px
    width @width - (@margin * 2)
    // height 94px
    padding 5px 8px
    font-size 11.5px
    line-height 1.45
    color $c-text-dark
    border 1px solid $c-text
    border-radius 4px
    background none
    resize none

    &:focus
      outline none
      border-color $c-link

.icon
  display inline-block
  background url('../img/icons-sprite.png')
  width 38px
  height 38px
  background-size 76px 228px
  background-repeat no-repeat
  background-position -38px 0

  &:hover,
  &.active
    background-position 0 0

  &.icon-chevron-left
    background-position -38px 0
    &:hover,
    &.active,
    .action:hover &,
    .action.active &
      background-position 0 0

  &.icon-chevron-right
    background-position -38px -38px
    &:hover,
    &.active,
    .action:hover &,
    .action.active &
      background-position 0 -38px

  &.icon-edit
    background-position -38px -76px
    &:hover,
    &.active,
    .action:hover &,
    .action.active &
      background-position 0 -76px

  &.icon-share
    background-position -38px -114px
    &:hover,
    &.active,
    .action:hover &,
    .action.active &
      background-position 0 -114px

  &.icon-email
    background-position -38px -152px
    &:hover,
    &.active,
    .action:hover &,
    .action.active &
      background-position 0 -152px

  &.icon-facebook
    background-position -38px -190px
    &:hover,
    &.active,
    .action:hover &,
    .action.active &
      background-position 0 -190px
