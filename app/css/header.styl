.header
  height 150px
  text-align center
  position relative

  +bp(mobile)
    height auto

  .facebook
    position absolute
    top 0
    left 0
    margin 16px

    +bp(mobile)
      position relative


  .logo
    padding 27px 0 0

    +bp(mobile)
      padding-top 10px

      img
        width 119px
        height 61px

  .messages-count
    display: inline-block;
    line-height: 20px;
    font-size: 13px;
    vertical-align: 3px;
    padding: 0 0 0 5px;

  .messages-invitation
    text-align left
    padding 10px 0 0
    font-size 12px
    max-width 85px

    +bp(mobile)
      text-align center
      padding 10px 0
      max-width 99999px
